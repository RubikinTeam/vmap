{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".truncate").each(function () {
                var text = this.innerHTML;
                if (text.length > 180) {
                    text = text.substring(0, 180);
                    text = text.replace(/\w+$/, '');
                    text += '<a href="#" ' +
                            'onclick="this.parentNode.innerHTML=' +
                            'unescape(\'' + escape(this.innerHTML) + '\');return false;">' +
                            '...<\/a>';
                    this.innerHTML = text;
                }
            })
        });
    </script>
